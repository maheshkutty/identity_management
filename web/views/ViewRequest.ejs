    <script>
      var UserAddress = "";

      window.addEventListener("load", async () => {
        if (window.ethereum) {
          window.web3 = new Web3(ethereum);
          try {
            await ethereum.enable();
            UserAddress = web3.eth.coinbase;
          } catch (error) {
            alert("User denied account access...");
          }
        } else if (window.web3) {
          window.web3 = new Web3(web3.currentProvider);
          UserAddress = web3.eth.coinbase;
        } else {
          alert(
            "Non-Ethereum browser detected. You should consider trying MetaMask!"
          );
        }
        web3.eth.getAccounts(function (err, accounts) {
          if (err != null) {
            alert("Error retrieving accounts.");
            return;
          }
          if (accounts.length == 0) {
            alert(
              "No account found! Make sure the Ethereum client is configured properly."
            );
            return;
          }
          UserAddress = accounts[0];
          web3.eth.defaultAccount = UserAddress;
          ViewDLRequestLength();
        });
      });

      function ViewDLRequestLength() {
        var ABIString = document.getElementById("hdnContractABI").value;
        ABIString = ABIString.replace(/'/g, '"');
        ABIJSON = JSON.parse(ABIString);
        MyContract = new web3.eth.Contract(ABIJSON, "<%=ContractAddress%>");
        MyContract.methods
          .ViewDLRequestLength(UserAddress)
          .call()
          .then(function (result) {
            console.log(result);
            RequestLength = parseInt(result);
            (function loop(i) {
              if (i < RequestLength)
                new Promise((resolve) => {
                  ViewDLRequestHeader(i);
                  setTimeout(resolve, 1000);
                }).then(loop.bind(null, i + 1));
            })(0);
          })
          .catch(function (err) {
            console.log(err);
          })
          .catch(function (err) {
            swal(error);
          });
        // MyContract.ViewDLRequestLength.call(
        //   UserAddress,
        //   function (error, result) {
        //     if (!error) {
        //       RequestLength = result.toNumber();

        //       (function loop(i) {
        //         if (i < RequestLength)
        //           new Promise((resolve) => {
        //             ViewDLRequestHeader(i);
        //             setTimeout(resolve, 1000);
        //           }).then(loop.bind(null, i + 1));
        //       })(0);
        //     } else {
        //       swal(error);
        //     }
        //   }
        // );
      }

      function ViewDLRequestHeader(index) {
        requestlistparent = document.getElementById("requestlistparent");
        MyContract.methods
          .ViewDLRequestHeader(UserAddress, index)
          .call()
          .then(function (result) {
            console.log(result);
            InstitutionName = "";
            ApprovalStatus = "";
            ApprovalStatusText = "";

            InstitutionName = result[0];
            ApprovalStatus = parseInt(result[1]);

            if (ApprovalStatus == "1") {
              ApprovalStatusText = "Waiting Approval";
              var listHTML =
                "<tr><td>" +
                InstitutionName +
                "</td><td>" +
                ApprovalStatusText +
                "</td><td align='center'><button type='button' class='btn btnsm btn-primary' onClick='ViewDLRequestDetail(" +
                index +
                ',"' +
                InstitutionName +
                "\")'>More Info</button></td></tr>";
            } else if (ApprovalStatus == "2") {
              ApprovalStatusText = "Partially Approved";
              var listHTML =
                "<tr><td>" +
                InstitutionName +
                "</td><td>" +
                ApprovalStatusText +
                "</td><td align='center'>&nbsp;</td></tr>";
            } else if (ApprovalStatus == "3") {
              ApprovalStatusText = "Approved";
              var listHTML =
                "<tr><td>" +
                InstitutionName +
                "</td><td>" +
                ApprovalStatusText +
                "</td><td align='center'>&nbsp;</td></tr>";
            } else if (ApprovalStatus == "4") {
              ApprovalStatusText = "Rejected";
              var listHTML =
                "<tr><td>" +
                InstitutionName +
                "</td><td>" +
                ApprovalStatusText +
                "</td><td align='center'>&nbsp;</td></tr>";
            }

            requestlistparent.insertAdjacentHTML("beforeend", listHTML);
          })
          .catch(function (err) {
            console.log(err);
          });
      }

      function ViewDLRequestDetail(index, InstitutionName) {
        Frm = document.IntelitixForm;

        Frm.hdnRequestIndex.value = index;
        Frm.hdnInstitutionName.value = InstitutionName;
        Frm.submit();
      }
